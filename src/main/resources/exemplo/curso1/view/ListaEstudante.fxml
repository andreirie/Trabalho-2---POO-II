<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="exemplo.curso1.controller.ListaEstudanteController">
    <children>
        <TableView fx:id="tableEstudantes">
            <columns>
                <TableColumn fx:id="colId" text="Id" />
                <TableColumn fx:id="colNome" text="Nome" />
                <TableColumn fx:id="colIdade" text="Idade" />
            </columns>
        </TableView>
        <HBox spacing="10.0">
            <Button fx:id="btnEditar" onAction="#btnEditarOnAction" text="Editar Selecionado" />
            <Button fx:id="btnVoltar" onAction="#btnVoltarOnAction" text="Voltar" />
        </HBox>
    </children>
</VBox>

